@{
    var controllerName = this.ViewContext.RouteData.Values["controller"].ToString();
    var actionName = this.ViewContext.RouteData.Values["action"].ToString();
}

<ol class="breadcrumb float-sm-right">
    <li class="breadcrumb-item"><a href="@Url.Action("Index","Dashboard")">Administration</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("Index",controllerName)">@controllerName</a></li>
    <li class="breadcrumb-item active"><a href="">@Html.ActionLink(actionName,actionName,controllerName)</a>
    </li>
</ol>
